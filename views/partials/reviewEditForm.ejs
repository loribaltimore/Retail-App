<div class="container row" id="review-edit-form" hidden>
    <h5>Update Review</h5>
    <form action="http://localhost:3001/shop/<%=currentUser.id%>/<%=currentItem.category.main%>/<%=currentItem.id%>/review/<%=currentReview.id%>?_method=PUT" method="POST">
    <input type="text" placeholder="<%=currentReview.body%>" name="review[review_body]">
    <input type="range" min="1" max="5" name="review[rating]">
    <button class="col btn btn-primary review-btn" id="edit-review-btn"><span class="review-btn-text">Edit</span></button>
    </form>
</div>