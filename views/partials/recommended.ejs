<div class="container row" id="recommended">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
        <div class="carousel-inner all-items-img">
          <%recommended.forEach(function (element, index){%>
           <% if (index === 0){%>
               <a href="/shop/<%=element.category.main%>/item/<%=element.id%>">
                <div class="carousel-item active text-center car-img">
                    <div class="row"><h5 class="col"><%=element.name%></h5> 
                        <h5 class="col top-item-price">$<%=element.price%></h5>
                </div>
            </a>
                    <img src="<%=element.img[0].path%>" class="d-block w-100 car-img" alt="...">
                    <p class="top-item-description"><%=element.description%></p>
                  </div>
              
            <%} else {%>
                <a href="/shop/<%=element.category.main%>/item/<%=element.id%>">
                <div class="carousel-item text-center">
                    <div class="row"><h5 class="col"><%=element.name%></h5> 
                        <h5 class="col top-item-price">$<%=element.price%></h5>
                </div>
            </a>
                    <img src="<%=element.img[0].path%>" class="d-block w-100 " alt="...">
                    <div>
                        <p class="col top-item-price"><%=element.description%></p>
                    </div>
                  </div>
                  <%}%>
            
          <%})%>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      </div></a>
      </div>